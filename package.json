{
    "name": "electron-boilerplate",
    "version": "1.0.0",
    "main": "./dist/main.js",
    "repository": "https://github.com/xieqingtian/web-boilerplate.git",
    "author": "xieqingtian <1255699673@qq.com>",
    "license": "MIT",
    "keywords": [
        "electron",
        "react",
        "typescript"
    ],
    "description": "electron boilerplate",
    "scripts": {
        "start": "qt dev",
        "build": "rimraf ./release && qt build && electron-builder --x64 -w",
        "postinstall": "electron-builder install-app-deps",
        "lint": "tsc --noEmit && eslint src/**/*.{ts,tsx} --quiet --fix",
        "format": "prettier --config ./.prettierrc.js --write ./src/**/*.{ts,tsx,scss}"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.2.5",
        "antd": "^4.0.3",
        "axios": "^0.19.0",
        "lodash": "^4.17.15",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-hot-loader": "^4.12.18",
        "react-redux": "^7.2.0"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "16.13.0",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/lodash": "^4.14.149",
        "@types/react": "^16.9.15",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.7",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "electron": "4.0.2",
        "electron-builder": "^22.1.0",
        "electron-devtools-installer": "^2.2.4",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "typescript": "^3.7.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc --noEmit"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,scss}": [
            "prettier --config ./.prettierrc.js --write",
            "eslint src/**/*.{ts,tsx}",
            "git add"
        ]
    },
    "build": {
        "productName": "electron模板",
        "appId": "org.your.productname",
        "mac": {
            "category": "your.app.category.type"
        },
        "directories": {
            "output": "release"
        },
        "linux": {
            "target": "deb"
        },
        "win": {
            "requestedExecutionLevel": "highestAvailable"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "language": 2052
        }
    }
}

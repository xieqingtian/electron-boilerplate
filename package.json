{
    "name": "electron-boilerplate",
    "version": "1.0.0",
    "main": "./dist/main.js",
    "repository": "https://github.com/xieqingtian/web-boilerplate.git",
    "author": "xieqingtian <1255699673@qq.com>",
    "license": "MIT",
    "keywords": [
        "electron",
        "react",
        "typescript"
    ],
    "description": "electron boilerplate",
    "scripts": {
        "start": "qt dev",
        "build": "rimraf \"release\" && qt build && electron-builder --x64 -w",
        "postinstall": "electron-builder install-app-deps",
        "lint:ts": "eslint \"src/**/*.{ts,tsx}\" --quiet --fix",
        "lint:style": "stylelint --fix \"src/**/*.scss\" --syntax scss",
        "format": "prettier --config \".prettierrc.js\" --write \"src/**/*.{ts,tsx,scss}\"",
        "tsc": "tsc --noEmit",
        "clean": "rimraf node_modules/.cache/hard-source/"
    },
    "dependencies": {},
    "devDependencies": {
        "@hot-loader/react-dom": "16.13.0",
        "@reduxjs/toolkit": "^1.3.5",
        "@types/lodash": "^4.14.150",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.6",
        "@types/react-redux": "^7.1.7",
        "@types/react-router-dom": "^5.1.4",
        "@umijs/fabric": "^2.0.8",
        "antd": "^4.1.4",
        "axios": "^0.19.0",
        "electron": "8.2.3",
        "electron-builder": "^22.1.0",
        "eslint": "^6.7.2",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.7",
        "lodash": "^4.17.15",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hot-loader": "^4.12.18",
        "react-redux": "^7.2.0",
        "react-router-dom": "^5.1.2",
        "rimraf": "^3.0.2",
        "stylelint": "^13.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc --noEmit"
        }
    },
    "lint-staged": {
        "src/**/*.{js,tsx,ts,scss,json}": [
            "prettier --config \".prettierrc.js\" --write"
        ],
        "src/**/*.scss": "stylelint --syntax scss",
        "src/**/*.{ts,tsx}": [
            "eslint \"src/**/*.{ts,tsx}\""
        ]
    },
    "build": {
        "productName": "electron模板",
        "appId": "org.your.productname",
        "mac": {
            "category": "your.app.category.type"
        },
        "directories": {
            "output": "release"
        },
        "linux": {
            "target": "deb"
        },
        "win": {
            "requestedExecutionLevel": "highestAvailable"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "language": 2052
        }
    }
}
